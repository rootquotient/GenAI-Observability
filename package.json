{
  "name": "genai-observability",
  "version": "0.0.1",
  "description": "GenAI API Cost & Drift Monitor",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "genai-monitor": "./dist/bin/genai-monitor.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "biome lint .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,json}": [
      "biome check --write"
    ]
  },
  "validate-branch-name": {
    "pattern": "^(main|develop|staging|master)$|^(feat|fix|hotfix|release|chore|docs|test|refactor)\\/[a-zA-Z0-9\\-]+$",
    "errorMsg": "Branch name must follow the pattern: type/description (e.g., feat/new-feature, fix/bug-123)"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/node": "^25.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "validate-branch-name": "^1.3.2"
  },
  "overrides": {
    "eslint": "^10.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
