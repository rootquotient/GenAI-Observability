{
  "name": "genai-observability",
  "version": "0.0.1",
  "description": "GenAI API Cost & Drift Monitor",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "validate-branch-name": {
    "pattern": "^(main|develop|staging|master)$|^(feat|fix|hotfix|release|chore|docs|test|refactor)\\/[a-zA-Z0-9\\-]+$",
    "errorMsg": "Branch name must follow the pattern: type/description (e.g., feat/new-feature, fix/bug-123)"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.2.2",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.55.0",
    "validate-branch-name": "^1.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
