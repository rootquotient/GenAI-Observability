{
  "name": "genai-observability",
  "version": "0.0.1",
  "description": "GenAI API Cost & Drift Monitor",
  "keywords": [
    "genai",
    "observability",
    "llm",
    "cost-monitor",
    "drift-detection"
  ],
  "author": "Root Quotient",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rootquotient/GenAI-Observability.git"
  },
  "bugs": {
    "url": "https://github.com/rootquotient/GenAI-Observability/issues"
  },
  "homepage": "https://github.com/rootquotient/GenAI-Observability#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome lint .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "size": "size-limit",
    "prepare": "husky"
  },
  "size-limit": [
    {
      "path": "dist/**/*.js",
      "limit": "10 kB"
    }
  ],
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,json}": [
      "biome check --write"
    ]
  },
  "validate-branch-name": {
    "pattern": "^(main|develop|staging|master)$|^(feat|fix|hotfix|release|chore|docs|test|refactor)\\/[a-zA-Z0-9\\-]+$",
    "errorMsg": "Branch name must follow the pattern: type/description (e.g feat/new-feature, fix/bug-123)"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/node": "^25.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "size-limit": "^12.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3",
    "validate-branch-name": "^1.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
